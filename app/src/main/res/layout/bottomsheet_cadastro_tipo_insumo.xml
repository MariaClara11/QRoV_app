<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <EditText
        android:id="@+id/inputIdTipoInsumo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Identificador"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="@color/md_black_1000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputNomeTipoInsumo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textColor="@color/md_black_1000"
        app:layout_constraintEnd_toEndOf="@+id/inputIdTipoInsumo"
        app:layout_constraintStart_toStartOf="@+id/inputIdTipoInsumo"
        app:layout_constraintTop_toBottomOf="@+id/inputIdTipoInsumo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cadastraTipo"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cadastrar tipo de insumo"
        app:layout_constraintEnd_toEndOf="@+id/inputNomeTipoInsumo"
        app:layout_constraintStart_toStartOf="@+id/inputNomeTipoInsumo"
        app:layout_constraintTop_toBottomOf="@+id/inputNomeTipoInsumo" />

</androidx.constraintlayout.widget.ConstraintLayout>